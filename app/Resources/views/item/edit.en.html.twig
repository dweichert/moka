{% extends 'base.html.twig' %}

{% block body %}
<form id="edit-item-form" name="edit-item-form" method="post" action="{{ path('item_save') }}">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('edit-item') }}">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label for="item-name">Name:</label>
                <input id="item-name" class="form-control" maxlength="255" type="text" name="item-name" value="{{ item.name }}">
            </div>
            <div class="form-group">
                <label for="item-description">Description:</label>
                <textarea id="item-description" class="form-control" maxlength="255" rows="5" name="item-name">{{ item.description }}</textarea>
            </div>
            <div class="form-group">
                <label for="item-url">URL:</label>
                <input id="item-url" class="form-control" maxlength="255" type="text" name="item-url" value="{{ item.url }}">
            </div>
            <!-- @TODO implement date picker -->
            <div class="form-group">
                <label for="item-due-date">Required by:</label>
                <input id="item-due-date" type="text" class="form-control" disabled="disabled" value="{{ item.due|date("d.m.Y") }}">
            </div>
            <div class="form-group">
                <label for="item-contributor">Contributor:</label>
                <select class="form-control" id="item-contributor">
                    {% for user in users %}
                        {% if user.username == item.contributor.username %}
                        <option selected="selected">{{ getDisplayName(user) }}</option>
                        {% else %}
                        <option>{{ getDisplayName(user) }}</option>
                        {% endif %}
                    {% endfor %}
                </select>
            </div>
        </div>
    </div>
</form>
{% endblock body %}

{% extends 'base.html.twig' %}

{% block body %}
    <form id="administrate-items-form" name="administrate-items-form" method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('administrate-items') }}">
        <input type="hidden" name="current-data-id" id="current-data-id">
        <input type="hidden" name="add-path" id="add-path" value="{{ path('item_add') }}">
        <input type="hidden" name="edit-path" id="edit-path" value="{{ path('item_edit') }}">
        <input type="hidden" name="delete-path" id="delete-path" value="{{ path('item_delete') }}">
        <div class="row">
            <div class="col-md-12">
                <p>
                    <span id="add-item">
                        <button title="add" class="btn btn-xs btn-primary item-add"><i class="fa fa-plus" aria-hidden="true"></i></button>
                        <a href="#">Add item</a>
                    </span>
                </p>
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Contributor</th>
                            <th>Required by</th>
                            <th><i class="fa fa-cog" aria-hidden="true"></i></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in items %}
                        <tr>
                            {% if item.url is empty %}
                            <td>{{ item.name }}</td>
                            {% else %}
                            <td><a href="{{ item.url }}" title="{{ item.url }}" target="_blank">{{ item.name }}</a></td>
                            {% endif %}
                            <td>{{ item.description }}</td>
                            <td>
                                {% if item.contributor is not empty %}
                                    <a href="#">{{ item.contributor.username }}</a>
                                {% else %}
                                    - not pledged yet -
                                {% endif %}
                            </td>
                            <td>
                                {% if item.due is not empty %}
                                    {{ item.due|date("d.m.Y")}}
                                {% else %}
                                    - no due date -
                                {% endif %}
                            </td>
                            <td>
                                <button id="edit-{{ item.id }}" title="edit" class="btn btn-xs btn-success item-edit" data-id="{{ item.id }}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></button>
                                <button id="delete-{{ item.id }}" title="delete" class="btn btn-xs btn-danger item-delete" data-id="{{ item.id }}"><i class="fa fa-trash-o" aria-hidden="true"></i></button>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </form>
    <div class="modal fade" id="delete-modal" tabindex="-1" role="dialog" aria-labelledby="delete-modal-label" aria-hidden="true">
        <div class="modal-dialog">
            <input type="hidden" id="delete-item-id" name="delete-item-id">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 id="delete-modal-label" class="modal-title">Delete item</h4>
                </div>
                <div class="modal-body">
                    <p>Do you really want to delete the item?</p>
                </div>
                <div class="modal-footer">
                    <p>
                        <button id="delete-submit-yes" class="btn btn-danger">Delete Item</button>
                        <button id="delete-submit-no" class="btn btn-success">Keep Item</button>
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock body %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $( document ).ready(function() {
            $('.item-delete').click(function () {
                $('#current-data-id').val($(this).attr('data-id'));
                $('#delete-modal').modal('show');
                return false;
            });
            $('#delete-submit-no').click(function () {
                $('#delete-modal').modal('hide');
            });
            $('#delete-submit-yes').click(function () {
                var administrateItemsForm = $('#administrate-items-form');
                administrateItemsForm.attr('action', $('#delete-path').val())
                administrateItemsForm.submit();
            });
        });
    </script>
{% endblock javascripts %}
